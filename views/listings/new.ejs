<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Add a carchy title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looking Good!</div>
        <div class="invalid-feedback">please enter valid title</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="enter description"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Title Looking Good!</div>
        <div class="invalid-feedback">please enter a valid title</div>
      </div>
      
      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
      </div>
      <div class="row">
        <div class="mb-3 col-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="1500"
            type="number"
            class="form-control"
            required
          />
          <!-- <div class="valid-feedback">Looking Good!</div> -->
          <div class="invalid-feedback">please enter a valid Price</div>
        </div>
        <div class="mb-3 col-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <!-- <div class="valid-feedback">Looking Good!</div> -->
          <div class="invalid-feedback">please enter valid country name</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="Indore, Madhya Pradesh"
          type="text"
          class="form-control"
          required
        />
        <!-- <div class="valid-feedback">Looking Good!</div> -->
        <div class="invalid-feedback">Location shoud be valid</div>
      </div>

      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
